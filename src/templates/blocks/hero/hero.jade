mixin hero()
  .section
    +b('section').hero--main
      +e.bg
      +e.content
        h1 REDEFINE FEASIBILITY
        p Traverse helps infrastructure developers simulate the economic outcome of every possible project configuration.

        a.btn.btn--ghost.b-color-blue.js-show-modal(href="#" data-modal="request-demo") REQUEST DEMO

      +e('a href="#platform"').mouse
        svg(width="21" height="26")
          use(xlink:href="#mouse")

  +b.modal.modal--with-overlay#request-demo
    //- .modal__cover
    .modal__container
      a.modal__close.js-close-modal(href="#")
        svg(width="12" height="12")
          use(xlink:href="#icon-close")

      +e.header
        h1.inner-hero-title schedule a demo

      +e.content
        form.demo-form(action="#")
          span.demo-form__title Preferred Day/Time (Select Multiple)
          select.form-control(multiple="multiple")
            option(data-display="Select day")
            option(value="sunday") Sunday
            option(value="monday") Monday
            option(value="tuesday") Tuesday
            option(value="wednesday") Wednesday
            option(value="thursday") Thursday
            option(value="friday") Friday
            option(value="saturday") Saturday
            option(value="any-day") Any Day
          select.form-control(multiple="multiple")
            option(data-display="Select time")
              option(value="911") 9 - 11
              option(value="111") 11 - 1
              option(value="13") 1 - 3
              option(value="35") 3 - 5
              option(value="5") > 5
              option(value="any-time") Any Time
          .demo-form__day
            .demo-form__select
              input#sunday(type="checkbox")
              label.demo-form__select__label(for="sunday") SUN
            .demo-form__select
              input#monday(type="checkbox")
              label.demo-form__select__label(for="monday") MON
            .demo-form__select
              input#tuesday(type="checkbox")
              label.demo-form__select__label(for="tuesday") TUE
            .demo-form__select
              input#wednesday(type="checkbox")
              label.demo-form__select__label(for="wednesday") WED
            .demo-form__select
              input#thursday(type="checkbox")
              label.demo-form__select__label(for="thursday") THUR
            .demo-form__select
              input#friday(type="checkbox")
              label.demo-form__select__label(for="friday") FRI
            .demo-form__select
              input#saturday(type="checkbox")
              label.demo-form__select__label(for="saturday") SAT

          .demo-form__day
            .demo-form__select
              input#911(type="checkbox")
              label.demo-form__select__label(for="911") 9 - 11
            .demo-form__select
              input#111(type="checkbox")
              label.demo-form__select__label(for="111") 11 - 1
            .demo-form__select
              input#13(type="checkbox")
              label.demo-form__select__label(for="13") 1 - 3
            .demo-form__select
              input#35(type="checkbox")
              label.demo-form__select__label(for="35") 3 - 5
            .demo-form__select
              input#5(type="checkbox")
              label.demo-form__select__label(for="5") >5

          input.form-control(type="text" placeholder="Full Name")
          input.form-control(type="text" placeholder="Company Name")
          input.form-control.u-mobile-hidden(type="text" placeholder="Skype or Phone Number")
          input.form-control(type="text" placeholder="Email Address")
          textarea.form-control.u-mobile-hidden(placeholder="Any other questions  or special requests?")
          button.btn submit
